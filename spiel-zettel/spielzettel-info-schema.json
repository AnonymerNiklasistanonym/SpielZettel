{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/SpielZettelFileInfo",
  "definitions": {
    "SpielZettelFileInfo": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "$ref": "#/definitions/SpielZettelVersion"
        },
        "ruleSets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SpielZettelRuleSet"
          },
          "description": "File path"
        },
        "elements": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SpielZettelElement"
          },
          "description": "Elements"
        },
        "res": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SpielZettelResourceFile"
          },
          "description": "Resource files"
        }
      },
      "required": [
        "$schema",
        "name",
        "version",
        "elements"
      ],
      "additionalProperties": false
    },
    "SpielZettelVersion": {
      "type": "object",
      "properties": {
        "major": {
          "type": "number"
        },
        "minor": {
          "type": "number"
        },
        "patch": {
          "type": "number"
        }
      },
      "required": [
        "major",
        "minor",
        "patch"
      ],
      "additionalProperties": false
    },
    "SpielZettelRuleSet": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "customFunctions": {
          "$ref": "#/definitions/SpielZettelRuleSetCustomFunctions"
        },
        "winCondition": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "loseCondition": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 2,
          "maxItems": 2
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "SpielZettelRuleSetCustomFunctions": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "minItems": 2,
        "items": [
          {
            "$ref": "#/definitions/CustomFunctionArgument"
          },
          {
            "$ref": "#/definitions/CustomFunctionBody"
          }
        ],
        "maxItems": 2
      },
      "description": "Custom function definition: [argument, body]"
    },
    "CustomFunctionArgument": {
      "type": "string"
    },
    "CustomFunctionBody": {
      "type": "string"
    },
    "SpielZettelElement": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "options": {
          "type": "array",
          "items": {
            "type": [
              "string",
              "number"
            ]
          }
        },
        "type": {
          "type": "string",
          "enum": [
            "number",
            "checkbox",
            "string",
            "options"
          ]
        },
        "position": {
          "type": "object",
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            }
          },
          "required": [
            "x",
            "y"
          ],
          "additionalProperties": false,
          "description": "Middle position"
        },
        "size": {
          "type": "object",
          "properties": {
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            }
          },
          "required": [
            "width",
            "height"
          ],
          "additionalProperties": false
        },
        "rules": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Function that provides dynamic state information if ruleset is enabled"
        }
      },
      "required": [
        "id",
        "type",
        "position",
        "size"
      ],
      "additionalProperties": false
    },
    "SpielZettelResourceFile": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "fileName": {
          "type": "string"
        },
        "fileData": {
          "type": "string",
          "description": "Base64"
        },
        "fileMimeType": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "fileName",
        "fileData",
        "fileMimeType"
      ],
      "additionalProperties": false
    }
  }
}