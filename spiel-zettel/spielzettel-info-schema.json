{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/SpielZettelFileInfo",
  "definitions": {
    "SpielZettelFileInfo": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version": {
          "$ref": "#/definitions/SpielZettelVersion"
        },
        "ruleSets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SpielZettelRuleSet"
          },
          "description": "File path"
        },
        "elements": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SpielZettelElement"
          },
          "description": "Elements"
        }
      },
      "required": [
        "$schema",
        "name",
        "version",
        "elements"
      ],
      "additionalProperties": false
    },
    "SpielZettelVersion": {
      "type": "object",
      "properties": {
        "major": {
          "type": "number"
        },
        "minor": {
          "type": "number"
        },
        "patch": {
          "type": "number"
        }
      },
      "required": [
        "major",
        "minor",
        "patch"
      ],
      "additionalProperties": false
    },
    "SpielZettelRuleSet": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "customFunctions": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 2,
            "maxItems": 2
          }
        },
        "winCondition": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "loseCondition": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 2,
          "maxItems": 2
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "SpielZettelElement": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "number",
            "checkbox",
            "string"
          ]
        },
        "position": {
          "type": "object",
          "properties": {
            "x": {
              "type": "number"
            },
            "y": {
              "type": "number"
            }
          },
          "required": [
            "x",
            "y"
          ],
          "additionalProperties": false,
          "description": "Middle position"
        },
        "size": {
          "type": "object",
          "properties": {
            "width": {
              "type": "number"
            },
            "height": {
              "type": "number"
            }
          },
          "required": [
            "width",
            "height"
          ],
          "additionalProperties": false
        },
        "id": {
          "type": "string"
        },
        "rules": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Function that provides dynamic state information if ruleset is enabled"
        }
      },
      "required": [
        "type",
        "position",
        "size",
        "id"
      ],
      "additionalProperties": false
    }
  }
}