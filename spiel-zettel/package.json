{
  "name": "spiel-zettel",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:pwa": "npm-run-all build build:sw-generate build:manifest-update",
    "start": "npx serve -p 8000 build",
    "start:https": "npx http-server -S -C cert.pem -p 8000 build",
    "build:sw-generate": "workbox generateSW workbox-config.js",
    "build:manifest-update": "ts-node --project tsconfig.scripts.json scripts/manifestReplaceAssetPrefix.ts",
    "create": "npm-run-all create:*",
    "create:schema": "ts-node --project tsconfig.scripts.json scripts/createJsonSchema.ts",
    "create:examples": "ts-node --project tsconfig.scripts.json scripts/createExamples.ts",
    "lint": "next lint",
    "lint:fix": "next lint --fix"
  },
  "dependencies": {
    "idb": "^8.0.2",
    "jszip": "^3.10.1",
    "next": "15.2.4",
    "next-intl": "^4.0.2",
    "qrcode.react": "^4.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-toastify": "^11.0.5",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-next": "15.2.4",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "image-type": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "ts-json-schema-generator": "^2.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "workbox-cli": "^7.3.0"
  }
}
